<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="CustomToggleableView" parent="@style/Widget.AppCompat.Button">
        <item name="android:textColor">@color/custom_selector_text_color</item>
        <item name="android:background">@drawable/day_selector_background</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:ems">3</item>
    </style>
</resources>
