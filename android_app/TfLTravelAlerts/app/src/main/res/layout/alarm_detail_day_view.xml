<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <data>
        <variable name="day" type="com.tfltravelalerts.model.Day" />
        <!--<variable name="alarm" type="com.tfltravelalerts.model.ConfiguredAlarm" />-->
        <variable name="days" type="java.util.Set&lt;com.tfltravelalerts.model.Day&gt;"/>
    </data>

    <ToggleButton
        tools:showIn="@layout/alarm_detail"
        android:id="@+id/alarm_detail_day_selector"
        style="@style/CustomToggleableView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Mon"
        app:constantToggleText="@{day.shortName}"
        android:checked="@{days.contains(day)}"
        />
</layout>